{% extends 'base.html.twig' %}

{% block title %}Gestion articles{% endblock %}

{% block body %}

{% for message in app.flashes('success') %}
    <div class="alert alert-success text-center mx-auto my-2">{{ message }}</div>
{% endfor %}

<div class="container">
    <h1 class="text-center mt-3">Gestion des articles</h1>
    <table class="table table-dark">
        <thead>
            <tr>
            {% for colonne in colonnes %}
                <th>{{ colonne }}</th>
            {% endfor %}
                <th>Cat√©gorie</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            {% for item in articles %}
                <tr>
                    <td>{{ item.id }}</td>
                    <td>{{ item.title }}</td>
                    <td><img src="{{ item.image }}" alt="" width="50"></td>
                    <td>{{ item.content|slice(0, 50) }}...</td>
                    <td>{{ item.createdAt|date('d/m/Y, H:i:s') }}</td>
                    <td>{{ item.categorie.title }}</td>
                    <td>
                        
                        <a href="{{ path('admin_article_edit', {id: item.id}) }}" class="text-warning"><i class="fas fa-edit"></i></a>
                        <a href="{{ path('admin_delete_article', {id: item.id}) }}" class="text-danger"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}